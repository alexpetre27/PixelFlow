---
import Layout from '../../layouts/Layout.astro';
import { client } from '../../lib/sanity';
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";

export async function getStaticPaths() {
  const projects = await client.fetch(`*[_type == "project"]{ "slug": slug.current }`);
  
  return projects.map((project: any) => ({
    params: { slug: project.slug },
  }));
}

const { slug } = Astro.params;

const project = await client.fetch(`*[_type == "project" && slug.current == $slug][0]{
  title,
  description,
  category,
  "imageUrl": image.asset->url
}`, { slug });
---

<Layout title={`${project.title} | Pixelflow`}>
  <main class="max-w-5xl mx-auto px-6 py-32 min-h-screen">
    <div class="mb-12">
      <a href="/" class="group inline-flex items-center gap-2 text-zinc-500 hover:text-white transition-colors">
        <span class="group-hover:-translate-x-1 transition-transform">←</span> 
        Înapoi la portofoliu
      </a>
    </div>
    
    <article class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      <div class="space-y-6">
        <Badge variant="secondary" className="bg-blue-500/10 text-blue-400 border-none px-4 py-1 text-xs uppercase tracking-widest font-bold">
          {project.category}
        </Badge>
        
        <h1 class="text-6xl font-black text-white tracking-tighter uppercase leading-none">
          {project.title}
        </h1>
        
        <p class="text-zinc-400 text-xl leading-relaxed font-light">
          {project.description}
        </p>

        <div class="pt-8">
          <Button className="bg-white text-black hover:bg-zinc-200 rounded-full px-10 py-6 text-lg font-bold transition-all hover:scale-105 active:scale-95">
            Lansează Proiectul
          </Button>
        </div>
      </div>

      <div class="relative group">
        <div class="absolute -inset-1 bg-linear-to-r from-blue-600 to-purple-600 rounded-4xl blur opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
        <img 
          src={project.imageUrl} 
          alt={project.title} 
          class="relative w-full aspect-4/5 object-cover rounded-4xl border border-white/10 shadow-2xl"
        />
      </div>
    </article>
  </main>
</Layout>