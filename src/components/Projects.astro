---
import { ExternalLink, Github } from "lucide-react";

interface Project {
  title: string;
  category: string;
  description: string;
  image: string;
  link?: string;
  github?: string;
  tags?: string[];
  slug?: string;
}

const { projects = [] } = Astro.props as { projects: Project[] };
---

<section id="work" class="relative w-full bg-[#030712] py-32 scroll-mt-24 overflow-hidden">
  
  <div class="absolute -top-40 -right-40 w-[600px] h-[600px] bg-[#0052FF]/10 rounded-full blur-[160px] pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-[#38bdf8]/10 rounded-full blur-[140px] pointer-events-none"></div>

  <div class="max-w-7xl mx-auto px-6 relative z-10">
    
    <div class="flex flex-col md:flex-row md:items-end justify-between mb-24 gap-8">
      <div class="space-y-6">
        <span class="text-[#38bdf8] font-mono text-xs tracking-[0.3em] uppercase inline-flex items-center gap-3">
          <span class="w-10 h-[1px] bg-gradient-to-r from-[#38bdf8] to-[#0052FF]"></span>
          Portofoliu
        </span>

        <h2 class="text-5xl md:text-7xl font-black text-white tracking-tighter leading-[0.9] uppercase">
          Selected  
          <span class="block text-transparent bg-clip-text bg-gradient-to-r from-[#38bdf8] via-white to-[#0052FF]">
            Projects
          </span>
        </h2>
      </div>

      <p class="text-zinc-400 max-w-md text-lg leading-relaxed font-light">
        Produse digitale construite cu obsesie pentru detalii, performanță și experiență.
      </p>
    </div>

    <div class="flex flex-col gap-24 md:gap-32">
      {projects.map((project) => (
        <div class="relative flex flex-col md:flex-row items-center gap-10 md:gap-16 lg:gap-32">

          <div class="group w-full md:w-[55%] lg:w-1/2 relative">
            
            <div class="absolute inset-0 rounded-[2.5rem] bg-gradient-to-br from-[#38bdf8]/40 via-transparent to-[#0052FF]/40 opacity-0 group-hover:opacity-100 blur-xl transition-all duration-700"></div>

            <div class="relative flex flex-col rounded-[2.5rem] border border-white/10 bg-white/5 backdrop-blur-2xl overflow-hidden transition-all duration-700 group-hover:-translate-y-2 group-hover:shadow-[0_30px_80px_-20px_rgba(0,82,255,0.4)]">

              <div class="relative aspect-video overflow-hidden bg-black/20">
                {project.image ? (
                  <img 
                    src={project.image}
                    alt={project.title}
                    class="w-full h-full object-cover transition-all duration-[1200ms] ease-out scale-[1.05] group-hover:scale-110 group-hover:rotate-[1deg]"
                    loading="lazy"
                  />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-zinc-600 uppercase text-xs tracking-widest">
                    No Image
                  </div>
                )}

                <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent"></div>

                <div class="absolute bottom-6 left-6 flex gap-4 opacity-0 translate-y-10 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500">
                  {project.link && (
                    <a href={project.link} target="_blank" rel="noopener noreferrer"
                       class="flex items-center gap-2 bg-white text-black px-6 py-3 rounded-full text-sm font-semibold hover:bg-[#38bdf8] hover:text-white transition-all shadow-lg hover:scale-105">
                      Live
                      <ExternalLink size={16} />
                    </a>
                  )}

                  {project.github && (
                    <a href={project.github} target="_blank" rel="noopener noreferrer"
                       class="flex items-center gap-2 bg-white/10 border border-white/20 backdrop-blur-lg text-white px-6 py-3 rounded-full text-sm font-semibold hover:bg-white hover:text-black transition-all shadow-lg hover:scale-105">
                      Code
                      <Github size={16} />
                    </a>
                  )}
                </div>
              </div>

              <div class="p-8 lg:p-10 space-y-4">
                <div class="flex justify-between items-center flex-wrap gap-4">
                  <span class="text-[#38bdf8] text-xs font-bold uppercase tracking-[0.25em]">
                    {project.category}
                  </span>

                  {project.tags && project.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {project.tags.map((tag: string) => (
                        <span class="text-[10px] uppercase tracking-widest text-zinc-400 bg-white/5 border border-white/10 px-3 py-1 rounded-full backdrop-blur-md">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>

                <h3 class="text-3xl font-bold text-white tracking-tight transition-all duration-300 group-hover:text-[#38bdf8]">
                  {project.title}
                </h3>
              </div>

            </div>
          </div>

          <div class="w-full md:w-[40%] lg:w-[35%] flex items-center md:ml-auto">
            <p class="text-zinc-400 text-lg md:text-xl leading-relaxed font-light">
              {project.description}
            </p>
          </div>

        </div>
      ))}
    </div>

    {projects.length === 0 && (
      <div class="text-center py-24 border border-dashed border-white/10 rounded-[2rem] bg-white/5 backdrop-blur-md">
        <p class="text-zinc-500 italic">Momentan baza de date este goală.</p>
      </div>
    )}
  </div>
</section>