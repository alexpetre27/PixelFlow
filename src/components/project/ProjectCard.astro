---
export interface Props {
  title: string;
  category?: string;
  description?: string;
  image?: string;
  imageUrl?: string;
  link?: string;
  github?: string;
  tags?: string[];
}

const { title, category = 'General', description = '', image, imageUrl, link, github, tags = [] } = Astro.props;
const liveImageUrl = imageUrl || image || (link
  ? `https://image.thum.io/get/width/1200/crop/800/${link}`
  : null);
---

<article class="group relative">
  <div class="absolute inset-0 rounded-[2.5rem] bg-linear-to-br from-[#38bdf8]/40 via-transparent to-[#0052FF]/40 opacity-0 group-hover:opacity-100 blur-xl transition-all duration-700"></div>

  <div class="relative flex flex-col rounded-[2.5rem] border border-white/10 bg-white/5 backdrop-blur-2xl overflow-hidden transition-all duration-700 group-hover:-translate-y-4 group-hover:shadow-[0_30px_80px_-20px_rgba(0,82,255,0.4)]">
    <div class="relative aspect-video overflow-hidden">
      {liveImageUrl ? (
        <img
          src={liveImageUrl}
          alt={`Screenshot din proiectul ${title}`}
          class="w-full h-full object-cover transition-all duration-[1200ms] ease-out scale-[1.05] group-hover:scale-110 group-hover:rotate-[1deg]"
          loading="lazy"
          decoding="async"
        />
      ) : (
        <div class="w-full h-full flex items-center justify-center bg-zinc-900 text-zinc-600 uppercase text-xs tracking-widest">
          Fara imagine
        </div>
      )}
      <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent pointer-events-none"></div>

      <div class="absolute bottom-8 left-8 flex gap-4 opacity-0 translate-y-10 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 z-20">
        {link && (
          <a href={link} target="_blank" rel="noopener noreferrer" class="relative flex items-center gap-2 bg-white text-black px-6 py-3 rounded-full text-sm font-semibold hover:bg-[#38bdf8] hover:text-white transition-all shadow-lg hover:scale-105">
            Live
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path><polyline points="15 3 21 3 21 9"></polyline><line x1="10" y1="14" x2="21" y2="3"></line></svg>
          </a>
        )}
        {github && (
          <a href={github} target="_blank" rel="noopener noreferrer" class="relative flex items-center gap-2 bg-white/10 border border-white/20 backdrop-blur-lg text-white px-6 py-3 rounded-full text-sm font-semibold hover:bg-white hover:text-black transition-all shadow-lg hover:scale-105">
            Code
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg>
          </a>
        )}
      </div>
    </div>

    <div class="p-10 space-y-6 relative z-0">
      <div class="flex justify-between items-center flex-wrap gap-4">
        <span class="text-[#38bdf8] text-xs font-bold uppercase tracking-[0.25em]">
          {category}
        </span>
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="text-[10px] uppercase tracking-widest text-zinc-400 bg-white/5 border border-white/10 px-3 py-1 rounded-full backdrop-blur-md">
              {tag}
            </span>
          ))}
        </div>
      </div>

      <div class="space-y-3">
        <h3 class="text-3xl font-bold text-white tracking-tight transition-all duration-300 group-hover:text-[#38bdf8]">
          {link ? <a href={link} target="_blank" rel="noopener noreferrer">{title}</a> : title}
        </h3>
        <p class="text-zinc-400 text-base leading-relaxed font-light line-clamp-3">
          {description}
        </p>
      </div>
    </div>
  </div>
</article>
